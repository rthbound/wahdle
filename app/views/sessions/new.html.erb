<h1>Sign In</h1>

<%= form_tag sessions_create_url do %>
	<div class="field">
		<%= label_tag :email%> <br />
		<%= text_field_tag :email %>
	</div>
	
	<div class="field">
		<%= label_tag :password%> <br />
		<%= password_field_tag :password%>
	</div>
	
	<div class="field">
		<%= submit_tag "Sign in!" %>
	</div>
	
	<% end %>