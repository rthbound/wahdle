<h1>Sign up!</h1>
<%= form_for @user do |form| %>
	<div class="field">
		<%= form.label :email%> <br />
		<%= form.text_field :email%>
	</div>
	<div class="field">
		<%= form.label :name%> <br />
		<%= form.text_field :name %>
	</div>
	<div class="field">
		<%= form.label :password %><br />
		<%= form.password_field :password%>
	</div>
	<div class="field">
		<%= form.label :password_confirmation %><br />
		<%= form.password_field :password_confirmation%>
	</div>
	<div>
		Are you the planner?
		<%= form.check_box :planner %>
	</div>
	<div class="action">
		<%= form.submit "Sign Up!" %>
	</div>

<% end %>