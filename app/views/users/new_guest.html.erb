<div id="quote_wrapper">
	<div id="main_quote">
		Now, group travel is easier than ever.
	</div>
	<div id="sub_quote">
		Plan an event, invite your group, pick a hotel & book!
		<a href="JavaScript:void(0);" class="button_action orange_action">Learn More</a>
	</div>	
</div>
<div id="step_wrapper">
	<div id="step_inner">
		<div id="step_header">
			<div id="steps_wrap">
				<div class="step" style="text-align:left;width:185px;">
					<div class="step_image" id="step_1_active"></div>
					<div class="clr"></div>
					Plan Event
				</div>
				<div class="step" style="text-align:center;">
					<div class="step_image" id="step_2_active"></div>
					Invite Guests
				</div>
				<div class="step" style="text-align:right;width:195px;">
					<div class="step_image" id="step_3_inactive"></div>
					<div class="clr"></div>
					Hotel Search
				</div>
				<div class="clr"></div>
			</div>
		</div>
		<div id="step_main">
			<div id="step_box">
				<div id="loops_wrap">
					<div class="loop" style="float:left;"></div>
					<div class="loop" style="float:right;"></div>
					<div class="clr"></div>
				</div>
				<div id="step_box_content">
					<%= form_tag add_users_path(:trip_id => params[:trip_id]) do %>
						<div class="input_names" id="guest_labels">
							<div class="name"><label>Guest 1</label></div>
							<div class="name"><label>Guest 2</label></div>
							<div class="name"><label>Guest 3</label></div>
							<div class="name"><label>Guest 4</label></div>
						</div>
						<div class="input_boxes" id="guest_inputs">
							<%= text_field :emails, :"0", :placeholder => "guest1@example.com" %>
							<%= text_field :emails, :"1", :placeholder => "guest2@example.com" %>
							<%= text_field :emails, :"2", :placeholder => "guest3@example.com" %>
							<%= text_field :emails, :"3", :placeholder => "guest4@example.com" %>
						</div>									
						<a href="JavaScript:void(0);" id="add_guest" class="button_action orange_action" style="float:left;margin-left:10px;">Add more</a>
						<div class="clr"></div>
					</div>
					<div id="step_box_footer" style="padding:10px 110px 0;">
						Send out some invites...
						<%= submit_tag "Invite Guests", :class => "button_action blue_action", :style => "float:right" %>
					</div>
				<% end %>	
			</div>
		</div>
	</div>
</div>

